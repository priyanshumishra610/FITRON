# FITRON AI Fitness OS - Environment Configuration

# App Configuration
APP_NAME=FITRON AI Fitness OS
VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS & Security
ALLOWED_HOSTS=["*"]
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:8000"]

# Database Configuration
DATABASE_URL=postgresql://fitron:fitron@localhost:5432/fitron
MONGODB_URL=mongodb://localhost:27017/fitron

# Redis for caching and real-time features
REDIS_URL=redis://localhost:6379

# External APIs
OPENAI_API_KEY=your-openai-api-key-here
CLIP_MODEL_PATH=models/clip-vit-base-patch32

# Ollama Configuration (for local LLM inference)
OLLAMA_BASE_URL=http://localhost:11434
MODEL_NAME=gemma

# Computer Vision Models
YOLO_MODEL_PATH=models/yolov8n-pose.pt
MEDIAPIPE_MODEL_PATH=models/mediapipe_pose
SAM_MODEL_PATH=models/sam_vit_h_4b8939.pth

# File Storage
S3_BUCKET_NAME=fitron-assets
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_REGION=us-east-1

# ZenML Configuration
ZENML_STACK_NAME=fitron-stack
ZENML_PIPELINE_NAME=fitron-adaptive-pipeline

# Analytics
POSTHOG_API_KEY=your-posthog-api-key
POSTHOG_HOST=https://app.posthog.com

# Firebase (for mobile push notifications)
FIREBASE_CREDENTIALS_PATH=config/firebase-credentials.json

# Socket.io
SOCKET_CORS_ORIGINS=["*"]

# Rep Tracking Configuration
MIN_REP_CONFIDENCE=0.7
MAX_REP_DURATION=10.0
EGO_LIFTING_THRESHOLD=0.8

# Physique Goal Configuration
CLIP_SIMILARITY_THRESHOLD=0.75
MAX_GOAL_PHYSIQUES=5 